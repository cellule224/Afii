<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_add_profile_pic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:clickable="true"
        android:src="@mipmap/profile_pic_holder"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquez pour ajouter la votre"
        android:labelFor="@+id/iv_add_profile_pic"/>

    <EditText
        android:id="@+id/et_setup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="32sp"
        android:inputType="textCapWords"
        android:layout_margin="16dp"
        android:hint="Votre nom"/>

    <Button
        android:id="@+id/btn_next_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="Suivant" />

</LinearLayout>