<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.PopupOverlay">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@drawable/gradient_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageButton
                android:id="@+id/btn_back_press_from_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_close_white_24dp"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#fff"
                android:text="DonnÃ©es personelles"/>

        </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/im_user_account_pic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/profile_pic_holder" />

            <TextView
                android:id="@+id/tv_user_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Amadou Diallo"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold"
                android:textColor="#f5c21a"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_account_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_account_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/ic_account_balance_wallet_black_24dp"
                    android:drawableRight="@drawable/ic_topup_black_24dp"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textColor="#40961f"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_account_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textColor="@color/editTextColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_user_member_since"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/ic_card_membership_black_24dp"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textColor="@color/editTextColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_user_account_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorPrimary"
                    android:text="Creez un code"
                    android:textColor="@color/editTextColor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/shaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2E2E2E"
        android:layout_gravity="center"
        android:textSize="12sp" />

</LinearLayout>